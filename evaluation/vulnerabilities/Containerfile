FROM docker.io/node:20.15.1-alpine3.20

ENV NODE_SHIELD_CONTAINER=1 \
    # Allow for running the vulnerabilities
    DANGEROUS_RUN_VULN=1

RUN apk update \
 && apk upgrade \
 && apk add --no-cache \
 jq

RUN echo '' >>/bin/convert \
 && chmod +x /bin/convert

WORKDIR /home/vulnerabilities
COPY ./ ./
RUN cd .cli \
 && npm clean-install

ENTRYPOINT ["/bin/sh"]
